@model MoneyTransfer.DAL.Entities.Customer

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="card shadow p-3">
        <div class="card-body">
            <div class="d-flex justify-content-end me-3 my-3">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNewCustomerModal"> Add New Customer</button>
            </div>
            <div>
                <table class="table table-sm table-hover table-striped table-bordered" id="userIndexDetailTbl">
                    <thead>
                        <tr>
                            <th>S.N</th>
                            <th>Customer Name</th>
                            <th>Code</th>
                            <th>Citizin No.</th>
                            <th>Contact</th>
                            <th>BankIds</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int sn = 0;}
                        @foreach (var customer in ViewBag.AllCustomesr)
                        {
                            sn++;
                            <tr>
                                <td>@sn</td>
                                <td>@customer.FullName</td>
                                <td>@customer.Code</td>
                                <td>@customer.CitizenshipNumber</td>
                                <td>@customer.Contact</td>
                                <td>@customer.BankId</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-warning">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addNewCustomerModal" tabindex="-1" role="dialog" aria-labelledby="addNewCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addNewCustomerModalLabel">Add New Customer </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FullName" class="control-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Code" class="control-label"></label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CitizenshipNumber" class="control-label"></label>
                            <input asp-for="CitizenshipNumber" class="form-control" />
                            <span asp-validation-for="CitizenshipNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contact" class="control-label"></label>
                            <input asp-for="Contact" class="form-control" />
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BankId" class="control-label">Bank</label>
                            <select asp-for="BankId" class="form-control">
                                <option value="">Select Bank</option>
                                <option value="1">Bank Of Nepal</option>
                                <option value="1">Bank oF India</option>
                            </select>
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>
                        <div class="modal-footer mt-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
                
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
