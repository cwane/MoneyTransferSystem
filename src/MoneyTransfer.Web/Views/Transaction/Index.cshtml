<div class="modal fade" id="addNewTransactionModal" tabindex="-1" role="dialog" aria-labelledby="addNewTransactionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addNewTransactionModalLabel">Add New Transaction </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <form asp-action="Index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            @*                             <div class="form-group col-md-4">
                            <label class="control-label">Sender</label>
                            <input asp-for="SenderId" class="form-control" />
                            <span asp-validation-for="SenderId" class="text-danger"></span>
                            </div> *@

                            <div class="form-group col-md-6">
                                <label for="senderName" class="control-label">Sender</label>
                                <input type="text" id="senderName" class="form-control" placeholder="Type sender name" />
                                <input type="hidden" id="senderId" name="SenderId" />
                                <span class="text-danger" id="senderNameError"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="SenderBankId" class="control-label"></label>
                                <input asp-for="SenderBankId" class="form-control" />
                                <span asp-validation-for="SenderBankId" class="text-danger"></span>
                            </div>

                            @*  <div class="form-group col-md-4">
                            <label class="control-label"> Receiver</label>
                            <input asp-for="ReceiverId" class="form-control" />
                            <span asp-validation-for="ReceiverId" class="text-danger"></span>
                            </div> *@

                            <div class="form-group col-md-6">
                                <label for="receiverName" class="control-label">Receiver</label>
                                <input type="text" id="receiverName" class="form-control" placeholder="Type receiver name" />
                                <input type="hidden" id="receiverId" name="ReceiverId" />
                                <span class="text-danger" id="receiverNameError"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="ReceiverBankId" class="control-label"></label>
                                <input asp-for="ReceiverBankId" class="form-control" />
                                <span asp-validation-for="ReceiverBankId" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label asp-for="SenderTransactionId" class="control-label"></label>
                            <input asp-for="SenderTransactionId" class="form-control" />
                            <span asp-validation-for="SenderTransactionId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReceiverTransactionId" class="control-label"></label>
                            <input asp-for="ReceiverTransactionId" class="form-control" />
                            <span asp-validation-for="ReceiverTransactionId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TransactionDate" class="control-label"></label>
                            <input asp-for="TransactionDate" class="form-control" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="amount" class="control-label">Amount</label>
                            <input asp-for="Amount" type="number" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
